<!-- PAGINATION-->
<%= Math.ceil(totalItems/pageLength)%>
<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center justify-content-lg-end">
    <li class="page-item">
      <a class="page-link" href="/shop?page=1" aria-label="Previous"
        ><span aria-hidden="true">«</span></a
      >
    </li>
    <li class="page-item <%if(+page === 1){%>active<%}%>">
      <a
        class="page-link"
        href="/shop?page=<% if (+page === 1) { %><%=+page%><%} else if(+page ===
        Math.ceil(totalItems/pageLength)) { %><%=+page - 2%><% } else { %><%=+page - 1%> <%}%>"
      >
        <% if (+page === 1) { %> <%=+page%> <%} else if(+page ===
        Math.ceil(totalItems/pageLength)) { %> <%=+page - 2%> <% } else { %>
        <%=+page - 1%> <%}%>
      </a>
    </li>
    <li
      class="
        page-item
        <%if((+page
        !==
        1)&&(+page
        !==
        Math.ceil(totalItems/pageLength))){%>active<%}%>
      "
    >
      <a
        class="page-link"
        href="/shop?page=<% if (+page === 1) { %><%=+page+1%><%} else if(+page ===
        Math.ceil(totalItems/pageLength)) { %><%=+page - 1%><% } else { %><%=+page%> <%}%>"
      >
        <% if (+page === 1) { %> <%=+page+1%> <%} else if(+page ===
        Math.ceil(totalItems/pageLength)) { %> <%=+page - 1%> <% } else { %>
        <%=+page%> <%}%>
      </a>
    </li>
    <li
      class="
        page-item
        <%if(+page
        ===
        Math.ceil(totalItems/pageLength)){%>active<%}%>
      "
    >
      <a
        class="page-link"
        href="/shop?page=<% if (+page === 1) { %><%=+page+2%><%} else if(+page ===
        Math.ceil(totalItems/pageLength)) { %><%=+page%><% } else { %><%=+page + 1%> <%}%>"
      >
        <% if (+page === 1) { %> <%=+page+2%> <%} else if(+page ===
        Math.ceil(totalItems/pageLength)) { %> <%=+page%> <% } else { %>
        <%=+page+1%> <%}%>
      </a>
    </li>
    <li class="page-item">
      <a
        class="page-link"
        href="/shop?page=<%=Math.ceil(totalItems/pageLength)%>"
        aria-label="Next"
        ><span aria-hidden="true">»</span></a
      >
    </li>
  </ul>
</nav>
